datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id             String   @id @default(cuid())
  email          String
  username       String
  firstName      String
  lastName       String
  password       String
  profilePicture String
  
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  Cloud          Cloud[]
  Guess          Guess[]
}

model Cloud {
  id      String  @id @default(cuid())
  answer  String
  image   String
  filter  String
  user    User    @relation(fields: [userId], references: [id])
  userId  String
  guesses Guess[]
}

model Guess {
  id      String  @id @default(cuid())
  answer  String
  filter  String?
  user    User    @relation(fields: [userId], references: [id])
  userId  String
  cloud   Cloud   @relation(fields: [cloudId], references: [id])
  cloudId String
}
